{
  "name": "@quiver/wasm",
  "version": "0.1.0",
  "description": "Quiver modular synthesizer WASM bindings",
  "main": "quiver.js",
  "module": "quiver.js",
  "types": "quiver.d.ts",
  "exports": {
    ".": {
      "types": "./quiver.d.ts",
      "import": "./quiver.js",
      "require": "./quiver.js"
    },
    "./worklet": {
      "types": "./dist/worklet-processor.d.ts",
      "default": "./dist/quiver-worklet.js"
    }
  },
  "files": [
    "quiver.js",
    "quiver.d.ts",
    "quiver_bg.wasm",
    "quiver_bg.wasm.d.ts",
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "cd ../../.. && make wasm && pnpm run build:worklet && pnpm run build:lib",
    "build:wasm": "cd ../../.. && make wasm",
    "build:worklet": "esbuild src/worklet-processor.ts --bundle --format=esm --outfile=dist/quiver-worklet.js --minify",
    "build:lib": "tsup src/index.ts src/audio.ts src/audio-manager.ts --format esm,cjs --dts --outDir dist",
    "build:dev": "cd ../../.. && make wasm-dev",
    "clean": "rm -rf dist quiver.js quiver.d.ts quiver_bg.wasm quiver_bg.wasm.d.ts",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "audio",
    "synthesizer",
    "modular",
    "quiver"
  ],
  "author": "Alex Nodeland",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexnodeland/quiver"
  },
  "homepage": "https://github.com/alexnodeland/quiver#readme",
  "bugs": {
    "url": "https://github.com/alexnodeland/quiver/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "devDependencies": {
    "esbuild": "^0.20.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
