{
  "name": "quiver-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Quiver modular audio synthesis library",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "build:wasm": "make wasm",
    "build:wasm:dev": "make wasm-dev",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "turbo": "^2.3.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "audio",
    "synthesizer",
    "modular",
    "wasm",
    "rust"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
