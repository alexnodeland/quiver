{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.js", "*.d.ts", "*.wasm"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "build:wasm": {
      "cache": false,
      "outputs": ["packages/@quiver/wasm/*.js", "packages/@quiver/wasm/*.d.ts", "packages/@quiver/wasm/*.wasm"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**", "tests/**", "**/*.spec.ts", "**/*.test.ts"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
